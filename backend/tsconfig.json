{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
